<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:title="@string/vehicle_type_title"
        android:summary="%s"
        android:key="@string/vehicle_type_key"
        android:defaultValue="Auto"
        android:entries="@array/vehicleArray"
        android:entryValues="@array/vehicleValues" />

    <ListPreference
        android:title="@string/preferred_speed_unit"
        android:summary="%s"
        android:key="@string/speed_unit_key"
        android:defaultValue="KM/H"
        android:entries="@array/speedUnitArray"
        android:entryValues="@array/speedUnitValues" />

    <ListPreference
        android:title="@string/preferred_language"
        android:summary="%s"
        android:key="@string/language_key"
        android:defaultValue="NL"
        android:entries="@array/languageArray"
        android:entryValues="@array/languageValues" />
</PreferenceScreen>